include header
body
  nav.nav.nav-pills
    ul.cp-tabs
      li(role="presentation") 
        a(href="/") Brand
      li(role="presentation") 
        a(href="/explore/") 发现
      li(role="presentation") 
        a(href="/square/") 广场
    ul.cp-user(role="menu")
      if user
        li.user-action(role="presentation") 
          if user.accountInfo.nickname
            a(href="/accounts/#{user.accountInfo.uid}/") #{user.accountInfo.nickname}
          else
            a(href="/accounts/#{user.accountInfo.uid}/") #{user.accountInfo.email}
        li.user-action(role="presentation")
          a(href="/accounts/logout/") 退出
      else
        li.user-action(role="presentation") 
          a(href="/accounts/login/") 登陆
        li.user-action(role="presentation")
          a(href="/accounts/register/") 注册
  block content

include footer
